<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CurrentLineActivity">


<LinearLayout
android:layout_width="match_parent"
android:layout_height="match_parent"
android:orientation="vertical">

    <TextView
        android:id="@+id/textViewCurrent"
        android:layout_width="297dp"
        android:layout_height="68dp"
        android:layout_gravity="center"
        android:layout_margin="15dp"
        android:text="Current Coupon Number"
        android:textSize="25dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textViewCurrentCouponNumber"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:layout_margin="20dp"

        android:text="1021"
        android:textSize="40dp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/phone_number"
        tools:text="Number"
        android:textSize="20dp"
        android:layout_gravity="center"/>




    <Button
        android:drawableTop="@drawable/ic_baseline_skip_next_24"
        android:id="@+id/buttonNext"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="20dp"
        android:onClick="NextNumber"
        android:text="Next Number"
        />

    <Button
        android:drawableTop="@drawable/ic_baseline_people"
        android:id="@+id/buttonCurrLine"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="20dp"
        android:onClick="CurrentLine"
        android:text="Current Line"
        />



    <Button
        android:drawableTop="@drawable/ic_baseline_arrow_back_24"
        android:id="@+id/buttonBack"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="20dp"
        android:onClick="Back"
        android:text="Back"
         />
</LinearLayout>
</ScrollView>