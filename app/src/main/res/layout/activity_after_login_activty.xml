<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AfterLoginActivity">


    <LinearLayout
        android:id="@+id/line1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:orientation="vertical">

        <Button
            android:id="@+id/buttonCurrentLine"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:layout_margin="25dp"
            android:drawableTop="@drawable/ic_baseline_people"
            android:onClick="CurrentLine"
            android:text="Current Line"
            app:backgroundTint="@color/colorPrimary" />

        <Button
            android:id="@+id/buttonExit"
            android:layout_width="160dp"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:layout_margin="25dp"
            android:drawableTop="@drawable/ic_baseline_exit"
            android:onClick="Exit"
            android:text="Exit"
            app:backgroundTint="@color/colorPrimary" />

    </LinearLayout>


</RelativeLayout>